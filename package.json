{
  "name": "voxora",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev:full": "npm run docker:start && turbo run dev",
    "dev": "turbo run dev",
    "docker:start": "cd docker && docker-compose -f docker-compose.dev.yml up -d redis mongodb mongo-express mailhog",
    "docker:stop": "cd docker && docker-compose -f docker-compose.dev.yml down",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "api/*"
  ]
}
